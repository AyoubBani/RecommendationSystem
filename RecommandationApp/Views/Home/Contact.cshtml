@{
    ViewBag.Title = "Contact";
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/style.css")
    @Styles.Render("~/Content/responsive.css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
   
    <div id="wrap-body"  class="container body-content">
        <div class="container">
            <div class="wrap-body-inner">
                <br /><br /><br />
                <!-- Breadcrumb-->
                <div class="hidden-xs">
                    <div class="row">
                        <div class="col-lg-6">
                            <ul class="ht-breadcrumb pull-left">
                                <li class="home-act"><a href="#"><i class="fa fa-home"></i></a></li>
                                <li class="active">Contact</li>
                            </ul>
                        </div>
                    </div>
                </div>
                <!-- Contact -->
                <section class="block-contact m-t-lg-30 m-t-xs-0 p-b-lg-50">
                    <div class="">
                        <div class="row">
                            <!-- Contact info -->
                            <div class="col-sm-6 col-md-6 col-lg-6 m-b-xs-30">
                                <div class="heading">
                                    <h3>Information</h3>
                                </div>
                                <div class="contact-info p-lg-30 p-xs-15 bg-gray-fa bg1-gray-2">
                                    <div class="content">
                                        <p>
                                            Plus de 200 Annonces Disponible dans notre Application
                                                 </p>
                                        <ul class="list-default">
                                            <li><i class="fa fa-clock-o"></i>RUE 35 NR 10 OULFA CASABLANCA - MAROC</li>
                                            <li><i class="fa fa-phone"></i>+212 663660530</li>
                                            <li><i class="fa fa-envelope-o"></i>bensaleh.mehdi@gmail.com</li>
                                            <li><i class="fa fa-globe"></i>www.sysrecommandation.com</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            <!-- Contact form -->
                            <div class="col-sm-6 col-md-6 col-lg-6">
                                <div class="heading">
                                    <h3>Contactez Nous</h3>
                                </div>
                                <div class="contact-form p-lg-30 p-xs-15 bg-gray-fa bg1-gray-2">
                                    <form>
                                        <div class="form-group">
                                            <input type="email" class="form-control form-item" placeholder="Email">
                                        </div>
                                        <div class="form-group">
                                            <input type="text" class="form-control form-item" placeholder="Télephone">
                                        </div>
                                        <div class="form-group">
                                            <input type="text" class="form-control form-item" placeholder="Adresse">
                                        </div>
                                        <textarea class="form-control form-item h-200 m-b-lg-10" placeholder="Description du Sujet" rows="3"></textarea>
                                        <button type="submit" class="ht-btn ht-btn-default">Envoyer</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
</body>
