@using System.Web.UI.WebControls
@model RecommandationApp.Models.OffreViewModel

@{
    ViewBag.Title = "Details";
}
@Styles.Render("~/Content/rating")

<!-- Main content -->
<div id="wrap-body" class="container body-content">
<div class="container">
<div class="wrap-body-inner">
<!-- Breadcrumb-->
<div class="hidden-xs">
    <div class="row">
        <div class="col-lg-6">
            <ul class="ht-breadcrumb pull-left">
                <li class="home-act">
                    <a href="#">
                        <i class="fa fa-home"></i>
                    </a>
                </li>
                <li class="home-act">
                    <a href="#">Restaurant</a>
                </li>
                <li class="home-act">
                    <a href="#">Détails Restaurant</a>
                </li>

            </ul>
        </div>
        @* <div class="col-lg-6"> *@
        @*     @Html.ActionLink("Edit", "Edit", new { id = Model.Offre.Id }) | *@
        @* *@
        @*     @Html.ActionLink("Delete", "Delete", new { id = Model.Offre.Id }) *@
        @* </div> *@
    </div>
</div>
<!-- Car detail -->
<section class="m-t-lg-30 m-t-xs-0">
    <div class="product_detail no-bg p-lg-0">
        <!-- Car name -->
        <div class="row">
            <div class="col-md-4">
                <h3 class="product-name color1-f">

                    <span class="product-price color-red">
                        <i class="color-9 color1-9"> Vous êtes les bienvenues / </i>
                    </span>
                    <span class="car-status m-l-lg-10">DISPONIBLE</span>
                </h3>
            </div>
            <div class="col-md-4">
                <input id="ratingval" type="hidden" value="@{ @Model.Offre.ratingValue() }" />                
                <div class='rating-stars text-center'>
                    <ul id='stars'>
                        <li class='star' title='Poor' data-value='1'>
                            <i class='fa fa-star fa-fw'></i>
                        </li>
                        <li class='star' title='Fair' data-value='2'>
                            <i class='fa fa-star fa-fw'></i>
                        </li>
                        <li class='star' title='Good' data-value='3'>
                            <i class='fa fa-star fa-fw'></i>
                        </li>
                        <li class='star' title='Excellent' data-value='4'>
                            <i class='fa fa-star fa-fw'></i>
                        </li>
                        <li class='star' title='WOW!!!' data-value='5'>
                            <i class='fa fa-star fa-fw'></i>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class='success-box'>
            <div class='clearfix'></div>
            <img alt='tick image' width='32' src='data:image/svg+xml;utf8;base64,'/>
            <div class='text-message'></div>
            <div class='clearfix'></div>
        </div>

        <div class="row">
            <div class="col-md-7 col-lg-8">
                <!-- Car image gallery -->
                <div class="product-img-lg bg-gray-f5 bg1-gray-15">
                    <div class="image-zoom row m-t-lg-5 m-l-lg-ab-5 m-r-lg-ab-5">
                        <div class="col-md-12 col-lg-12 p-lg-5">
                            <img src="~/images/@Html.DisplayFor(model => Model.Offre.Image1)" width="70%">
                        </div>

                    </div>
                </div>
            </div>
            <!-- Car description -->
            <div class="col-md-5 col-lg-4">
                <ul class="product_para-1 p-lg-15 bg-gray-f5 bg1-gray-15">
                    <li>
                        <span>Nom de l'Entreprise :</span>@Html.DisplayFor(model => model.Offre.Title)
                    </li>
                    <li>
                        <span>Nom du Représentant :</span> @Html.DisplayFor(model => model.Offre.Representant.nom)
                    </li>
                    <li>
                        <span>Adresse :</span> @Html.DisplayFor(model => model.Offre.AdresseRecomo)
                    </li>
                    <li>
                        <span>Telephone :</span>@Html.DisplayFor(model => model.Offre.TelRecomo)
                    </li>
                    <li><span>Ville :</span>Rabat</li>

                </ul>
            </div>
        </div>
    </div>
    <!-- Car description tabs -->
    <div class="row m-t-lg-30 m-b-lg-50">
        <div class="col-md-8">
            <div class="m-b-lg-30">
                <div class="heading-1">
                    <h3>Description</h3>
                </div>
                <div class="m-b-lg-30 bg-gray-fa bg1-gray-2 p-lg-30 p-xs-15">
                    <p class="color1-9">
                        @Html.DisplayFor(model => model.Offre.Description)
                    </p>
                </div>
            </div>
            <div class="m-b-lg-30">
                <div class="heading-1">
                    <h3>Commentaires:</h3>
                </div>
                <div class="bg-gray-fa bg1-gray-2 p-lg-30 p-xs-15">
                    @foreach (var item in Model.Offre.Comments)
                    {
                        <div class="row">
                            <div class="col-md-4">
                                <div class="media g-mb-30 media-comment">
                                    <img class="d-flex g-width-50 g-height-50 rounded-circle g-mt-3 g-mr-15" src="~/images/clients/@Html.DisplayFor(modelItem => item.Client.profileImage)" alt="Image Description">
                                    <div class="media-body u-shadow-v18 g-bg-secondary g-pa-30">
                                        <div class="g-mb-15">
                                            <h5 class="h5 g-color-gray-dark-v1 mb-0">@Html.DisplayFor(modelItem => item.Client.nom) @Html.DisplayFor(modelItem => item.Client.prenom)</h5>
                                            <span class="g-color-gray-dark-v4 g-font-size-12">5 days ago</span>
                                        </div>

                                        <p>@Html.DisplayFor(modelItem => item.Text)</p>

                                        <ul class="list-inline d-sm-flex my-0">
                                            <li class="list-inline-item g-mr-20">
                                                <a class="u-link-v5 g-color-gray-dark-v4 g-color-primary--hover" href="#!">
                                                    <i class="fa fa-thumbs-up g-pos-rel g-top-1 g-mr-3"></i>
                                                    178
                                                </a>
                                            </li>
                                            <li class="list-inline-item g-mr-20">
                                                <a class="u-link-v5 g-color-gray-dark-v4 g-color-primary--hover" href="#!">
                                                    <i class="fa fa-thumbs-down g-pos-rel g-top-1 g-mr-3"></i>
                                                    34
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    @using (Html.BeginForm("CreateComment", "Offres", FormMethod.Post, new {@class = "form-inline"}))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            @Html.EditorFor(model => model.Comment.Text, new {htmlAttributes = new {@class = "form-control", PlaceHolder = "Votre Commentaire"}})
                            @Html.HiddenFor(model => model.Offre.Id)
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Ajouter" class="btn btn-default"/>
                        </div>
                    }



                </div>
            </div>
            <div class="m-b-lg-0">
                <div class="heading-1">
                    <h3>Fiche Technique de l'Entreprise</h3>
                </div>
                <div class="bg-gray-fa bg1-gray-2 p-lg-30 p-xs-15">


                </div>
            </div>
        </div>
        <!-- Dealer Infomation -->
        <div class="col-sm-12 col-md-4 col-lg-4">
            <div class="heading-1">
                <h3><i class="fa fa-info-circle"></i>Contactez Nous</h3>
            </div>
            <a href="#" class="bg-gray-fa bg1-gray-2 p-lg-15 text-center m-b-lg-20 display-block">
                <img src="images/logo.png" alt="image">
            </a>
            <h4 class="p-t-lg-0">
                <a href="#">Info/ Renseignement:</a>
            </h4>
            <div class="clearfix"></div>
            <ul class="list-default m-t-lg-0">
                <li><i class="fa fa-user-circle-o m-r-lg-10  icon"></i>Mr. Bensaleh Mehdi</li>
                <li><i class="fa fa-phone m-r-lg-10 icon"></i>06 63 66 05 30 </li>
                <li><i class="fa fa-envelope-o m-r-lg-10 icon"></i>bensaleh.mehdi@gmail.com</li>
                <li><i class="fa fa-home m-r-lg-10 icon"></i>Rue 35 NR 10 OULFA CASABLANCA - MAROC</li>
                <li class="view-map"><i class="fa fa-map-marker m-r-lg-10 icon"></i>Regardez Notre localisation</li>
                <li>
                    <a href="#"><i class="fa fa-globe m-r-lg-10 icon"></i>http://www.casarentcar.com</a>
                </li>
            </ul>
            <!-- Form contact dealer-->
            <div class="m-t-lg-30">
                <div class="heading-1">
                    <h3><i class="fa fa-envelope-o"></i>Envoyer un message</h3>
                </div>
                <div class="bg-gray-fa bg1-gray-2 p-lg-20">
                    <form>
                        <div class="form-group">
                            <input type="email" class="form-control form-item" placeholder="Email">
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control form-item" placeholder="Telephone">
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control form-item" placeholder="Adresse">
                        </div>
                        <textarea class="form-control form-item h-200 m-b-lg-10" placeholder="Cntenu du message" rows="3"></textarea>
                        <button type="submit" class="ht-btn ht-btn-default">Envoyer</button>
                    </form>
                </div>
            </div>
        </div>
    </div>


</section>
</div>
</div>
</div>